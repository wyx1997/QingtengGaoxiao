<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/talk_item_civ"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        app:civ_border_color="@color/talk_item_civ_bg"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/talk_item_people_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/secondaryText"
        android:padding="5dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/talk_item_civ"
        app:layout_constraintLeft_toRightOf="@id/talk_item_civ"/>

    <TextView
        android:id="@+id/talk_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/primaryText"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/talk_item_people_details"
        app:layout_constraintLeft_toRightOf="@id/talk_item_civ"/>
</android.support.constraint.ConstraintLayout>